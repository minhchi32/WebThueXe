@model WebThueXe.Models.NguoiDung

@{
    ViewBag.Title = "XemThongTinCaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>XemThongTinCaNhan</h2>

<div>
    <h4>NguoiDung</h4>
    <hr />
    <section class="container-fluid" style="height:100%">
        <section class="row justify-content-center">
            <section class="col-12 col-sm-8 col-md-4 form-container">
                <h2>Thông tin cá nhân</h2>
                <form>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.ten)</label>
                        @Html.TextBoxFor(model => model.ten, new { style = "field-validation-error" })
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.SDT)</label>
                        @Html.TextBoxFor(model => model.SDT, new { style = "field-validation-error" })
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.diaChi)</label>
                        @Html.TextBoxFor(model => model.diaChi)
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.hoKhau)</label>
                        @Html.TextBoxFor(model => model.hoKhau)
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.soTKNganHang)</label>
                        @Html.TextBoxFor(model => model.soTKNganHang)
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.NganHang.tenNganHang)</label>
                        @Html.TextBoxFor(model => model.NganHang.tenNganHang)
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.CMND)</label>
                        @Html.TextBoxFor(model => model.CMND)
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="remember"> Remember me
                        </label>
                    </div>
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                </form>
            </section>
        </section>
    </section>
</div>
