@model WebThueXe.Models.NguoiDung
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
@using (Html.BeginForm("Login", "User"))
{
    @Html.AntiForgeryToken()
    <section class="container-fluid" style="height:100%">
        <section class="row justify-content-center">
            <section class="col-12 col-sm-8 col-md-4 form-container">
                <h2>Đăng nhập</h2>
                <form>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.username)</label>
                        @Html.TextBoxFor(model => model.username, new { style = "field-validation-error" })
                    </div>
                    <div class="form-group">
                        <label>@Html.LabelFor(model => model.password)</label>
                        @Html.TextBoxFor(model => model.password, new { style = "field-validation-error" })
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox" name="remember"> Remember me
                        </label>
                    </div>
                    <p>Chưa có tài khoản?<a href="@Url.Action("Register", "User")">Đăng ký</a></p>
                    <button type="submit" class="btn btn-primary">Đăng nhập</button>
                </form>
            </section>
        </section>
    </section>

}