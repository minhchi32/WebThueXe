
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}

<section class="container-fluid" style="height:100%">
    <section class="row justify-content-center">
        <section class="col-12 col-sm-8 col-md-4 form-container">
            <h2>Đăng ký</h2>
            <form>
                <div class="form-group">
                    <label>Tên:</label>
                    <input type="text" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label>SĐT:</label>
                    <input type="text" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label>Số tài khoản ngân hàng:</label>
                    <input type="text" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label>Tên ngân hàng:</label>
                    <select type="text" class="form-control" id="" name="loaiXe" required="">
                        <option>Tất cả loại xe</option>
                        <option value="1">1</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>CMND:</label>
                    <input type="text" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label>Tài khoản:</label>
                    <input type="text" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label>Mật khẩu:</label>
                    <input type="password" class="form-control" id="">
                </div>
                <div class="form-group">
                    <label>Nhập lại mật khẩu:</label>
                    <input type="password" class="form-control" id="">
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" name="remember"> Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-primary" onclick="location.href='@Url.Action("Index", "User")'">Đăng ký</button>
            </form>
        </section>
    </section>
</section>

